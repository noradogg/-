\ProcessOptions\relax


% -- styles
% correct bad hyphenation here
\hyphenation{op-tical net-works semi-conduc-tor}


% -- fonts
% use Helvetica as sans-serif
\RequirePackage[scaled]{helvet}
% use Palatino as serif(roman)
%\renewcommand{\rmdefault}{pplx}
% use Times as serif(roman)
\renewcommand{\rmdefault}{ptm}
% use Courier as typewriter
\renewcommand{\ttdefault}{pcr}
\normalfont


\iftrue
	% 8.27in x 11.69in
	\RequirePackage[a4paper,dvipdfm,twoside,truedimen]{geometry}
	%\geometry{textheight=10.6in,textwidth=7.3in}
	%\geometry{layouthoffset=0.1in,textheight=10.7in,textwidth=7.6in}
	\geometry{columnsep=0.2in,twoside,bindingoffset=0.2in,textheight=10.6in,textwidth=7.6in}
\else
	\RequirePackage{setspace}
	\setlength{\topmargin}{-0.5in}
	\setlength{\oddsidemargin}{-0.5in}
	\setlength{\textwidth}{7.3in}
	\setlength{\textheight}{10.6in}
	\setlength{\headheight}{0.0in}
	\setlength{\headsep}{0.0in}
	\setlength{\topskip}{0.0in}
	\setlength{\footskip}{0.0in}
	\setlength{\columnsep}{0.25in}
\fi



